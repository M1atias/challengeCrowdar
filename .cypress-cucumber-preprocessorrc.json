{
  "nonGlobalStepDefinitions": false,
  "stepDefinitions": [
    "cypress/e2e/step_definitions/**/*.{js,ts}"
  ],
  "messages": {
    "enabled": true,
    "output": "cypress/reports/cucumber-messages.ndjson"
  },
  "html": {
    "enabled": true,
    "output": "cypress/reports/cucumber-html-simple.html"
  },
  "json": {
    "enabled": true,
    "output": "cypress/reports/cucumber-json/cucumber-report-[datetime].json"
  },
  "junit": {
    "enabled": true,
    "output": "cypress/reports/cucumber-junit.xml"
  }
}
